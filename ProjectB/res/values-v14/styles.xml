<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme for API 14+. This theme completely replaces
        AppBaseTheme from BOTH res/values/styles.xml and
        res/values-v11/styles.xml on API 14+ devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <!-- API 14 theme customizations can go here. -->
        
        <item name="android:background">@android:color/black</item>
    </style>
    
    <style name="Titles">
        <item name="android:textColor">@android:color/holo_blue_dark</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">center</item>
        <item name="android:paddingTop">10dip</item>
    </style>
    
    <style name="CurrentConditions">
        <item name="android:textColor">@android:color/holo_orange_light</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">normal</item>
    </style>
    
    <style name="WeatherTitles">
        <item name="android:textColor">@android:color/holo_orange_light</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:background">@android:color/holo_red_light</item>
        <item name="android:maxEms">5</item>
    </style>
    
    <style name="WeatherInfo">
        <item name="android:textColor">@android:color/holo_red_light</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">italic</item>
    </style>
    
    <style name="RadioStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:paddingLeft">2dip</item>
        <item name="android:paddingRight">5dip</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:minWidth">240dip</item>
    </style>
    
    <style name="RadioStyleB">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:paddingLeft">2dip</item>
        <item name="android:paddingRight">5dip</item>
        <item name="android:background">@android:color/darker_gray</item>
        <item name="android:minWidth">240dip</item>
    </style>
    
    <style name="ImageStyle">
        <item name="android:drawablePadding">10dip</item>
        <item name="android:width">80dip</item>
        <item name="android:height">80dip</item>
    </style>
    
    <style name="TableStyle">
        <item name="android:padding">10dip</item>
    </style>
    
    <style name="CellStyle">
        <item name="android:paddingLeft">5dip</item>
        <item name="android:paddingRight">5dip</item>
    </style>

</resources>